{
  "name": "typecheck-files",
  "version": "1.0.3",
  "description": "Typecheck specific TypeScript files using your project's tsconfig.json",
  "type": "module",
  "bin": {
    "typecheck-files": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "prepublishOnly": "npm run build",
    "test": "c8 tsx --test 'test/**/*.test.ts'",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "typescript",
    "tsc",
    "typecheck",
    "lint-staged",
    "husky",
    "pre-commit"
  ],
  "author": "Joseph Mearman",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mearman/typecheck-files.git"
  },
  "bugs": {
    "url": "https://github.com/Mearman/typecheck-files/issues"
  },
  "homepage": "https://github.com/Mearman/typecheck-files#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@eslint/js": "9.39.2",
    "@eslint/markdown": "7.5.1",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/node": "25.0.10",
    "c8": "10.1.3",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jsonc": "2.21.0",
    "eslint-plugin-prettier": "5.5.5",
    "husky": "9.1.7",
    "jiti": "2.6.1",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "semantic-release": "25.0.2",
    "test-related": "1.0.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.53.1"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "publishConfig": {
    "provenance": true
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "npx test-related"
    ],
    "src/*.ts": [
      "eslint --fix",
      "npx typecheck-files",
      "npx test-related"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}
